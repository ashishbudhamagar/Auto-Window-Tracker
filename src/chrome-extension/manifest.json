{
  "manifest_version": 3,
  "name": "Auto Window Tracker",
  "version": "1.0.0",
  "action" : {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "description": "Track and organize browser windows automatically with a click of a button",
  "icons": {
    "16": "public/16.png",
    "32": "public/32.png",
    "48": "public/48.png",
    "192": "public/192.png"
  },
  "permissions": ["storage", "tabs", "tabGroups", "windows"]
}